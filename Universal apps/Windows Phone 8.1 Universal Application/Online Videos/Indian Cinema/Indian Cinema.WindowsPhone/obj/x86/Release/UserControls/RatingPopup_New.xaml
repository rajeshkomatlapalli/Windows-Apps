<UserControl
    x:Class="OnlineVideos.UserControls.RatingPopup_New"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnlineVideos.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    xmlns:rating="using:JISoft.RatingControl"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="Black">
        <Popup x:Name="mypopMessage" Margin="20,170,0,0" >
            <Grid 
                x:Name="gridpopup" 
                Background="#424542" 
                Opacity="1" 
                Height="360" 
                Width="360" 
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock 
                    x:Name="tbktitle" 
                    Text="Rating" 
                    Grid.Row="0" 
                    Margin="0,40,0,0" 
                    FontFamily="Segoe WP" 
                    FontSize="40" 
                    Foreground="{StaticResource PhoneForegroundBrush}" 
                    HorizontalAlignment="Center"
                    />
                <StackPanel Grid.Row="1" Orientation="Vertical">                    
                    <rating:Rating
                        Background="#424542"
                        Name="rate" 
                        Margin="0,50,0,30" 
                        RatingItemCount="5"
                        AllowSelectingZero="True"
                        Height="40" 
                        Width="200">
                    </rating:Rating>
                    <StackPanel Orientation="Horizontal">
                        <Image x:ConnectionId='1' 
                            Name="save"
                            Height="40"
                            Width="40"
                            Source="/Images/rating/appbar.check.rest.png" 
                            Margin="100,50,0,0" 
                                                                
                            >
                        </Image>
                        <Image x:ConnectionId='2' 
                            Height="40"
                            Width="40"
                            Name="cancel" 
                            Source="/Images/rating/appbar.cancel.rest.png" 
                            Margin="80,50,0,0"                                       
                            >
                        </Image>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Popup>

    </Grid>
</UserControl>

